{
  "id":<%= @shape_set.id %>,
  "name":"<%= @shape_set.name %>",
  "radius":<%= @shape_set.radius or "null"%>,
  "center_point":<%= @shape_set.center_point or "null"%>,
  "default_perspective":<%= @shape_set.default_perspective.id or "null"%>
  <% if [:yes,:partial].include? @cascade %>,
  "shapes":[
    <% @shape_set.shapes.each_with_index do |shape, i| @shape = shape %>
    <%= render :partial => 'shapes/show.json' %><%= "," unless i == @shape_set.shapes.size-1 %>
    <% end %>
  ]
  <% end %>
}