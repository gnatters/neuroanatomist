{ 
  "id":<%= @perspective.id or "null" %>,
  "name":"<%= @perspective.name %>",
  "style_set":<%= @perspective.has_external_styles? ? "#{@perspective.style_set.id}" : false %>,
  "height":<%= @perspective.height or "null" %>,
  "angle":<%= @perspective.angle or "null" %>,
  "distance":<%= @perspective.distance or "null" %><% if [:yes,:partial].include? @cascade %>,
  "regions":[
    <% @perspective.active_regions.each_with_index do |region, i|
         @region = region %>
    <%= "," unless i == 0 %><%= render :partial => 'regions/show.json' %>
    <% end %>
  ]
  <% end %>
}