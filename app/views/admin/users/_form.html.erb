<%= form_for [:admin, @user] do |f| %>
<%= f.error_messages %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :alias %><br />
  <%= f.text_field :alias %>
</div>

<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>

<div class="field">
  <%= f.label :password %><br />
  <%= f.text_field :password %>
</div>

<p>
  <%= f.check_box :admin %>
  <%= f.label :admin, "Is an admin?" %>
</p>
<%= f.submit %>
<% end %>