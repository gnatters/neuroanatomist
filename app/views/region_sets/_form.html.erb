<%= form_for(@region_set) do |f| %>
  <% if @region_set.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@region_set.errors.count, "error") %> prohibited this region set from being saved:</h2>

      <ul>
      <% @region_set.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "33x6" %>
  </div>


  <h4> Regions </h4>
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Number of Definitions</th>
      <th>include</th>
    </tr>
  <% @regions.each do |region| %>
    <tr>
      <td><%= label :regions, "region_#{region.id}".to_sym, region.name %></td>
      <td><%= region.description %></td>
      <td><%= region.region_definitions.size %></td>
      <td><%= check_box :regions, "region_#{region.id}".to_sym, :checked => @region_set.regions.include?(region) %></td>
    </tr>
  <% end %>
  </table>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>