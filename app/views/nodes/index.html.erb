<h1>Listing nodes</h1>

<table  class="backend_data">
  <tr>
    <th>Title</th>
    <th>Introduction</th>
    <th>Thing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.name %></td>
    <td><%= node.introduction %></td>
    <td><%= link_to node.thing ? node.thing.name : "" , node.thing %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

