<h1>Listing things</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Synonyms</th>
    <th>Neurolex category</th>
    <th>Dbpedia resource</th>
    <th>Wikipedia title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @things.each do |thing| %>
  <tr>
    <td><%= thing.name %></td>
    <td><%= thing.description %></td>
    <td><%= thing.synonyms %></td>
    <td><%= thing.neurolex_category %></td>
    <td><%= thing.dbpedia_resource %></td>
    <td><%= thing.wikipedia_title %></td>
    <td><%= link_to 'Show', thing %></td>
    <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
    <td><%= link_to 'Destroy', thing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

